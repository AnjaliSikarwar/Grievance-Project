<%- include('../layouts/header.ejs') %>
<%- include('../layouts/sidebar.ejs') %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Main content -->
      <div class="content">
        <h1>Display Course</h1>

        <!-- /.card -->
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"></h3>
            <button type="button" class="btn btn-info" style="float: right;" data-toggle="modal" data-target="#addcourse">Add Course</button>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <% if(msg.length>0){ %>
              <div class="alert alert-success ">
                <%= msg %>
              </div>
              <% } %>

              <% if(msg1.length>0){ %>
              <div class="alert alert-danger">
                <%= msg1 %>
              </div>
              <% } %> 
              
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Course</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% i=1 %>
                <% s.forEach((item)=>{ %>
                  <tr>
                    <td><%= i++ %></td>  
                    <td><%= item.cname %></td>
                    <!-- <td>987653437</td> -->
                    <td>
                    <a href="/admin/courseview/<%= item._id %>" class="btn btn-info">View</a>
                    <a href="/admin/courseedit/<%= item._id %>" class="btn btn-success">Edit</a>
                    <a href="/admin/coursedelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                    </td>
                  </tr>
               <% }) %>
               
              </tbody>
              <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Course</th>
                  <th>Action</th>
                </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!--Modal add student start-->
       
      <div class="modal fade" id="addcourse">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Add Course</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
             <form action="/courseinsert" method="post">

              <div class="form-group">
                <label>Course </label>
                <input type="text" name="cname" class="form-control" required>
              </div>

          
              <button class="btn btn-success" type="Submit">Submit</button>
             </form>
            </div>

            <!-- <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div> -->

          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
        <!--Modal add student end-->

      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%- include('../layouts/footer.ejs') %>